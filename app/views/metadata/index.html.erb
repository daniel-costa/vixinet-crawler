<p id="notice"><%= notice %></p>

<h1>Metadata</h1>

<table class="table table-condensed table-bordered">
  <thead>
    <tr>
      <th>Entry</th>
      <th>Meta rule</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @metadata.each do |metadatum| %>
      <tr>
        <td><%= metadatum.entry %></td>
        <td><%= metadatum.meta_rule %></td>
        <td><%= metadatum.value %></td>
        <td><%= link_to 'Show', metadatum %></td>
        <td><%= link_to 'Edit', edit_metadatum_path(metadatum) %></td>
        <td><%= link_to 'Destroy', metadatum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<%= link_to 'New Metadatum', new_metadatum_path, class: "btn btn-primary btn-xs" %>
